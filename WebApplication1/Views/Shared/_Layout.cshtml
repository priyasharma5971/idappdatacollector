<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Id Card Data Collector</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/Scripts/bootstrap.min.js"></script>*@


    
</head>
<body >
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Citron Id Card Data Collector", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" style="display:block;">
                <ul class="nav navbar-nav" style="display:block;flex-direction:row-reverse;display:flex;">
                    <li style="padding:1%">@Html.ActionLink("Logout", "LogOff", "Account")</li>
                    <li style="padding:1%">@Html.ActionLink("ChangePassword", "ChangePassword", "Users")</li>
                    <li style="padding:1%">@Html.ActionLink("Add APK", "Index", "StoreAPKs")</li>
                    <li style="padding:1%">@Html.ActionLink("Renewal List", "Index", "renewals")</li>
                    <li style="padding:1%">@Html.ActionLink("Dealers", "Index", "Dealers")</li>
                    <li style="padding:1%">@Html.ActionLink("Add Customer", "Create", "Users")</li>
                    <li style="padding:1%">@Html.ActionLink("Customers", "Index", "Users")</li>

                </ul>

            </div>
        </div>
    </div>
    @*@Html.Partial("_LoginPartial")*@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year </p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)


</body>
</html>
